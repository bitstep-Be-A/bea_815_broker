[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/projects/myapi
ExecStart=gunicorn \
          main:app \
          --workers 4 \
          --worker-class uvicorn.workers.UvicornWorker \
          --bind 0:7860
[Install]
WantedBy=multi-user.target